<a href="/management">Back</a>
<h3><%=@antique.name%></h3>
<h4>$<%=@antique.price%></h4>


<form action="/antique/update/<%=@antique.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="name">Update Name</label>
    <input type="text" name="name" id="name" required>
  </div>
  <div class="form-group">
    <label for="price">Update Price</label>
    <input type="text" name="price" id="price" required>
  </div>
  <button type="submit" class="btn btn-warning" name="button">Submit</button>
</form><br>
<form class="" action="/antique/delete/<%=@antique.id%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn btn-danger" type="submit" name="button">Delete</button>
</form>
